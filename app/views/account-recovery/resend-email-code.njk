{% extends "../form.njk" %}

{% block pageTitle %}
    {{ t('account-recovery-resend-email-code:title') }}
{% endblock %}

{% block formElements %}
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading" id="page-heading">
                {{ t('account-recovery-resend-email-code:heading') }}
            </h1>
        </legend>

        <p class="govuk-body">{{ t('account-recovery-resend-email-code:p-1') }}</p>

        <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text" id="details-summary-span">
                    {{ t('account-recovery-resend-email-code:p-2') }}
                </span>
            </summary>

            <div class="govuk-details__text">
                <p>
                    {{ t('account-recovery-resend-email-code:p-3') }} 
                </p>
                
                <p>
                    <a href={{ enterEmailLink }} id="re-enter-email">{{ t('account-recovery-resend-email-code:href-1') }}</a>
                    {{ t('account-recovery-resend-email-code:p-4') }}
                </p>
                <p>{{ t('account-recovery-resend-email-code:p-5') }}</p>
            </div>
        </details>
   </fieldset>

    <input type="hidden" name="callbacks" value="resend">
    <input type="hidden" name="callbacks" value="">
{% endblock %}
