{% extends "../form.njk" %}

{% block pageTitle %}
    {{ t('auth-resend-mobile:title') }}
{% endblock %}

{% block formElements %}
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading" id="page-heading">
                {{ t('auth-resend-mobile:heading') }}
            </h1>
        </legend>

        <p class="govuk-body">{{ t('auth-resend-mobile:p-1') }}</p>
        <p class="govuk-body">{{ t('auth-resend-mobile:p-2') }}</p>
    </fieldset>

    <input type="hidden" name="callbacks" value="resend"/>
    <input type="hidden" name="callbacks" value="" />

{% endblock %}

{% block nextSteps %}
    <p><a id="cannot-access-mobile" href="/account-recovery/start-update-mobile">{{ t('auth-resend-mobile:href-1') }}</a></p>
{% endblock %}
