{% extends "../form.njk" %}

{% block pageTitle %}
     {% if errors[0] %}
        {{ t('reg-mobile:error-title') }}
        {% else %}
        {{ t('reg-mobile:title') }}
         {% endif %}
{% endblock %}

{% block formElements %}
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading" id="page-heading">
                {{ t('reg-mobile:heading') }}
            </h1>
        </legend>

        <p>{{  t('reg-mobile:p-1') }}</p>

        <p>{{  t('reg-mobile:p-2') }}</p>

        {{ govukInput({
            label: {
                text: t('reg-mobile:label')
            },
            classes: "govuk-input--width-20",
            id: 'callbacks[0]',
            name: 'callbacks',
            value: form.callbacks[0] if form,
            inputmode: "numeric",
            hint: { text : t('reg-mobile:hint') },
            attributes: {
                spellcheck: "false"
            },
            errorMessage: {
                text: errors[0].msg
            } if errors[0]
        }) }}
    </fieldset>
    <input type="hidden" name="callbacks" />
{% endblock %}
