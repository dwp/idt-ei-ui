{% extends "../form.njk" %}

{% block pageTitle %}
    {{ t('reg-resend-email:title') }}
{% endblock %}

{% block formElements %}

    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading" id="page-heading">
                {{ t('reg-resend-email:heading') }}
            </h1>
        </legend>

        <p class="govuk-body">{{ t('reg-resend-email:p-1') }}</p>

        <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text" id="resend-additional-details">
              {{ t('reg-resend-email:p-2') }}
            </span>
            </summary>
            <div class="govuk-details__text">
                <p>{{ t('reg-resend-email:p-3') }}</p>
                <p><a href="/register/re-enter-email" id="re-enter-email">{{ t('reg-resend-email:href-1') }}</a>{{ t('reg-resend-email:p-4') }}</p>
                <p>{{ t('reg-resend-email:p-5') }}</p>
            </div>
        </details>
    </fieldset>
    <input type="hidden" name="callbacks" value="resend"/>
    <input type="hidden" name="callbacks" value="" />

{% endblock %}
