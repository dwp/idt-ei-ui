{% extends "../form.njk" %}

{% block pageTitle %}
 {% if errors[0] %}
    {{ t('reg-verify-email:error-title') }}
    {% else %}
    {{ t('reg-verify-email:title') }}
  {% endif %}
{% endblock %}

{% block formElements %}
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading" id="page-heading">
                {{ t('reg-verify-email:heading') }}
            </h1>
        </legend>

        <p class="govuk-body">{{ t('reg-verify-email:p-1') }}</p>

        {{ govukInput({
            label: {
                text: t('reg-verify-email:label')
            },
            classes: "govuk-input--width-10",
            id: 'callbacks[0]',
            name: 'callbacks',
            value: form.callbacks[0] if form,
            inputmode: "numeric",
            autocomplete: "off",
            attributes: {
                spellcheck: "false"
            },
            errorMessage: {
                text: errors[0].msg
            } if errors[0]
        }) }}
    </fieldset>
    <input type="hidden" name="callbacks" />
{% endblock %}

{% block nextSteps %}
    <p><a href="/register/resend-email" id="email-not-received">{{ t('reg-verify-email:retryLink') }}</a></p>
{% endblock %}
